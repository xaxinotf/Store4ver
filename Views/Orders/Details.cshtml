@model List<Order>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Деталі замовлення</h1>

<div>
    <h4>Ваше замовлення :3</h4>
    <hr />
    <dl class="row">
        @foreach(var item in Model)
        {
        <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => item.Status)
        </dt>
        <dd class = "col-sm-10">
                @Html.DisplayFor(model => item.Status)
        </dd>
        <dd class = "col-sm-11">
                <p><small>0-ваше замовлення в обробці</small></p>
                <p><small>1-ваше замовлення прийнято до обробки</small></p>
                <p><small>2-ваше замовлення направлено на достаку</small></p>
        </dd>
        <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => item.DeliveryAddress)
        </dt>
        <dd class = "col-sm-10">
                @Html.DisplayFor(model => item.DeliveryAddress)
        </dd>
        <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => item.ShipTypeNavigation)
        </dt>
        <dd class = "col-sm-10">
                @Html.DisplayFor(model => item.ShipTypeNavigation.Id)
        </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.FirstOrDefault().Id">Змінити</a> |
    <a asp-action="Index">На головну сторінку</a>
</div>
