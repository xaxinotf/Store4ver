@model List<Order>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        @foreach(var item in Model)
        {
        <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => item.Status)
        </dt>
        <dd class = "col-sm-10">
                @Html.DisplayFor(model => item.Status)
        </dd>
        <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => item.UserId)
        </dt>
        <dd class = "col-sm-10">
                @Html.DisplayFor(model => item.UserId)
        </dd>
        <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => item.DeliveryAddress)
        </dt>
        <dd class = "col-sm-10">
                @Html.DisplayFor(model => item.DeliveryAddress)
        </dd>
        <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => item.PaymentType)
        </dt>
        <dd class = "col-sm-10">
                @Html.DisplayFor(model => item.PaymentType.Id)
        </dd>
        <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => item.ShipTypeNavigation)
        </dt>
        <dd class = "col-sm-10">
                @Html.DisplayFor(model => item.ShipTypeNavigation.Id)
        </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.FirstOrDefault().Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
