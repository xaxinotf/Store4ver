@using Store444.Dopomoga;
@model Order

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Змінити</h1>

<h4>Замовлення</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ShipTypeId" />
            <input type="hidden" asp-for="PaymentTypeId" />
            <div class="form-group">
                <select asp-for="Status">
                    @foreach (Status status in Enum.GetValues(typeof(Status)))
                    {
                        <option value="@status">@EnumHelper.GetStatus(status)</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label asp-for="DeliveryAddress" class="control-label"></label>
                <input asp-for="DeliveryAddress" class="form-control" />
                <span asp-validation-for="DeliveryAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутись на головну сторінку</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
